<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.turanbalayev.moviesapp.ui.fragment.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.turanbalayev.moviesapp.ui.fragment.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome" >
        <action
            android:id="@+id/action_welcomeFragment_to_letsyouinFragment"
            app:destination="@id/letsyouinFragment"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/letsyouinFragment"
        android:name="com.turanbalayev.moviesapp.ui.fragment.LetsyouinFragment"
        android:label="fragment_letsyouin"
        tools:layout="@layout/fragment_letsyouin" >
        <action
            android:id="@+id/action_letsyouinFragment_to_createAccountFragment"
            app:destination="@id/createAccountFragment"
            app:popUpTo="@id/letsyouinFragment" />
        <action
            android:id="@+id/action_letsyouinFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/letsyouinFragment" />
    </fragment>
    <fragment
        android:id="@+id/createAccountFragment"
        android:name="com.turanbalayev.moviesapp.ui.fragment.createaccount.CreateAccountFragment"
        android:label="fragment_create_account"
        tools:layout="@layout/fragment_create_account" >
        <action
            android:id="@+id/action_createAccountFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/createAccountFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.turanbalayev.moviesapp.ui.fragment.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_createAccountFragment"
            app:destination="@id/createAccountFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.turanbalayev.moviesapp.ui.fragment.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_topMoviesFragment"
            app:destination="@id/topMoviesFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_homeFragment_to_exploreFragment"
            app:destination="@id/exploreFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_homeFragment_to_splashFragment"
            app:destination="@id/splashFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/topMoviesFragment"
        android:name="com.turanbalayev.moviesapp.ui.fragment.topmovies.TopMoviesFragment"
        android:label="fragment_top_movies"
        tools:layout="@layout/fragment_top_movies" >
        <action
            android:id="@+id/action_topMoviesFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/topMoviesFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_topMoviesFragment_to_exploreFragment"
            app:destination="@id/exploreFragment"
            app:popUpTo="@id/topMoviesFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/exploreFragment"
        android:name="com.turanbalayev.moviesapp.ui.fragment.explore.ExploreFragment"
        android:label="fragment_explore"
        tools:layout="@layout/fragment_explore" />
    <fragment
        android:id="@+id/myListFragment"
        android:name="com.turanbalayev.moviesapp.ui.fragment.mylist.MyListFragment"
        android:label="fragment_my_list"
        tools:layout="@layout/fragment_my_list" />
    <fragment
        android:id="@+id/downloadFragment"
        android:name="com.turanbalayev.moviesapp.ui.fragment.download.DownloadFragment"
        android:label="fragment_download"
        tools:layout="@layout/fragment_download" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.turanbalayev.moviesapp.ui.fragment.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>